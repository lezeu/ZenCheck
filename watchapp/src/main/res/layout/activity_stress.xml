<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.measuring.StressActivity">

  <!-- TextView for displaying current pulse rate -->
  <TextView
      android:id="@+id/stressValue"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/measure_stress"
      android:textSize="24sp"
      android:layout_marginTop="16dp"
      android:textAlignment="center"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent" />

  <!-- Button to start or stop measurement -->
  <Button
      android:id="@+id/btnStressMeasurement"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/start_measurement"
      android:layout_marginTop="24dp"
      app:layout_constraintTop_toBottomOf="@id/stressValue"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent" />

  </androidx.constraintlayout.widget.ConstraintLayout>