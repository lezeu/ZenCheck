<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_challenge"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <ImageView
        android:id="@+id/challenge_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/breath"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/challenge_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Breathing exercise"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/challenge_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/challenge_difficulty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Medium"
        app:layout_constraintStart_toStartOf="@+id/challenge_title"
        app:layout_constraintTop_toBottomOf="@+id/challenge_title" />

    <ProgressBar
        android:id="@+id/challenge_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:progress="30"
        app:layout_constraintEnd_toEndOf="@+id/challenge_difficulty"
        app:layout_constraintStart_toStartOf="@+id/challenge_difficulty"
        app:layout_constraintTop_toBottomOf="@+id/challenge_difficulty" />

    <TextView
        android:id="@+id/challenge_progress_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="30%"
        app:layout_constraintBottom_toBottomOf="@+id/challenge_progress"
        app:layout_constraintStart_toEndOf="@+id/challenge_progress"
        app:layout_constraintTop_toTopOf="@+id/challenge_progress" />

</androidx.constraintlayout.widget.ConstraintLayout>